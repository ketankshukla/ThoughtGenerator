<%= form_for [topic, entry], remote: true do |f| %>
    <div class="col-md-12">
      <div class="well">
        <div class="entry-form">
          <%= f.text_area :body, :cols => 40, :rows => 5, id: 'entry-box' %>
        </div>
        <%= f.submit "Save",  class: 'btn btn-success btn-lg', id: 'save' %>
      </div>
    </div>
<% end %>